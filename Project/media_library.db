CREATE TABLE Media (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    type TEXT NOT NULL, -- Book, Game, Music
    title TEXT NOT NULL,
    genre TEXT NOT NULL
);

CREATE TABLE Genres (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL
);

